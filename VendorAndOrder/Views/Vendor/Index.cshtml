@using VendorAndOrder.Models;

@{
  Layout = "_Layout";
}

<h1>Vendors</h1>

@if (@Model.Count == 0)
{
  <h3>No Vendors have been added yet!</h3>
} 

@foreach (Vendor vendor in Model)
{
  <h3><a href='/vendors/@vendor.Id'>Vendor Name: @vendor.Name || Vendor Description: @vendor.Description</a></h3>
}

<p><a href='/'>Back home</a></p>
<p><a href='/vendors/new'>Add another Vendor</a></p>